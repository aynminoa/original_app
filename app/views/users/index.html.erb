<h1>Users</h1>

<%= form_with(url: albums_path, method: :get, local: true) do |form| %>
  <p class="mr-3">国またはエリア名で検索</p>
  <p class="mr-5"><%= form.text_field :title %>
  <%= form.submit '検索', class: "btn btn-outline-dark py-1 mr-5" %></p>
<% end %>


<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.image, size: '100x100' if user.image.attached? %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>