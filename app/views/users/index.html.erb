<div class="container mx-auto text-center text-base lg:text-sm w-4/5 lg:w-1/2 bg-white my-14 px-4 md:px-8 py-8 rounded-md shadow-md">

  <h1 class="text-2xl font-semibold mb-5"><%= t('.users') %></h1>

  <div class="mb-10">
    <%= form_with(url: albums_path, method: :get, local: true) do |form| %>
    <p class="mb-1"><%= t('.can_search_with_title') %></p>
    <p class=""><%= form.text_field :title, placeholder: t('.input_title'), class: "w-2/3 md:w-1/3 border-2 border-yellow-300 rounded-md mr-2" %>
      <%= form.submit t('.search'), class:"px-2 py-1 sm:px-3 sm:py-2 rounded-md bg-yellow-300 hover:bg-yellow-400" %></p>
      <% end %>
  </div>

<div class="grid grid-cols-1 sm:grid-cols-2 mb-5">
    <% @users.each do |user| %>
    <div class= "min-h-36 p-5 mx-2 shadow-lg rounded-md text-base lg:text-sm">
        <p class="h-14 w-14 md:h-28 md:w-28 mx-auto rounded-full object-contain"><%= image_tag user.image if user.image.attached? %></p>
        <p class="text-base font-semibold mb-2"><%= link_to user.name, user, class:" underline hover:opacity-75" %>さん</p>
        <p class="break-all"><%= user.self_introduction %></p>
        <p class="mt-6">
          <span class="border-b-2 border-yellow-300 mr-2 px-1"><%= t('.title') %></span>
          <% if user.albums.any? %>
            <% user.albums.each do |album| %>
              <%= album.title %>
            <% end %>
          <% else %>
          まだアルバムはありません。
          <% end %>
        </p>
      </div>
    <% end %>
</div>

</div>