<h1>about me</h1>

<% if @user == current_user %>
<p>
  <%= link_to "アカウント編集", edit_user_registration_path %>
</p>
<% end %>

<% if @user.image.attached? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @user.image, size: '100x100' %>
  </p>
  <% else %>
  <p>**no picture**</p>
<% end %>
<h3>ユーザー名</h3>
<%= @user.name %>
<h3>メールアドレス</h3>
<%= @user.email %>
<h3>自己紹介</h3>
<%= @user.self_introduction %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Visited on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album %></td>
        <td><%= album.visited_on.strftime("%Y年%m月") %></td>
        <% if @album.user == current_user %>
          <td><%= link_to 'Edit', edit_album_path(album) %></td>
          <td><%= link_to 'Destroy', album_path(album, user_id: @album.user_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @user == current_user || current_user == guest_user %>
<p>アルバム新規作成</p>
<%= form_with(model: @album, url: {controller: 'albums', action: 'create' }, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :visited_on %>
    <%= form.date_select :visited_on, {discard_day: true} %>
  </div>

  <%= form.hidden_field :user_id, value: @user.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<% end %>
