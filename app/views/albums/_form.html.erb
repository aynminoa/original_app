<%= form_with(model: album, local: true) do |form| %>
  <% if album.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% album.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-8 flex flex-col">
    <%= form.label :title %>
    <%= form.text_field :title, class: "mx-auto w-2/3 mt-2 border-2 border-yellow-300 rounded-md focus:outline-none" %>
  </div>

  <div class="field mb-8 flex flex-col">
    <%= form.label :visited_on %>
    <p class="flex justify-center mt-2">
      <%= form.date_select :visited_on, {discard_day: true}, class: "border-2 border-yellow-300 rounded-md mr-2 focus:outline-none" %>
    </p>
  </div>

  <div class="field mb-8 flex justify-center">
    <%= form.label :published, "公開", value: true, class: "mr-1" %>
    <%= form.radio_button :published, 'true', class: "mr-3" %>
    <%= form.label :published, "非公開", value: false, class: "mr-1" %>
    <%= form.radio_button :published,'false' %>
  </div>

  <div class="actions">
    <%= form.submit class: "w-2/3 py-2 rounded-md bg-yellow-300 hover:bg-yellow-400" %>
  </div>
<% end %>
