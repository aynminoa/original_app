<% if current_user.try(:admin?) %>
  <h1>Albums</h1>
<% else %>
  <h1>Albums</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>user</th>
      <th>Title</th>
      <th>Visited on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.user.name %></td>
        <td><%= album.title %></td>
        <td><%= album.visited_on.strftime("%Y年%m月") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

