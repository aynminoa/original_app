<div class="container mx-auto text-center text-sm lg:text-base w-4/5 lg:w-1/2 bg-white my-14 px-4 md:px-8 py-8 rounded-md shadow-md"> 

  <p class="text-lg lg:text-2xl font-semibold mb-8"><i class="fa-solid fa-magnifying-glass"></i>「<%= "#{params[:title]}" %>」の検索結果</p>

  <div class="mb-10">
    <%= form_with(url: albums_path, method: :get, local: true) do |form| %>
      <p class="mb-1 text-xs sm:text-sm"><%= t('.search_with_title') %></p>
      <p class="text-xs sm:text-sm"><%= form.text_field :title, placeholder: t('.input_title'), class: "w-2/3 md:w-1/3 border-2 border-yellow-300 rounded-md py-1 mr-2" %>
      <%= form.submit t('.search'), class:"px-2 py-1 sm:px-3 sm:py-2 text-sm rounded-md bg-yellow-300 hover:bg-yellow-400" %></p>
    <% end %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 mb-10">
    <% @albums.each do |album| %>
      <div class="mb-5 mx-2 shadow-lg rounded-md text-sm sm:text-base">
        <p class="h-7 bg-yellow-300 rounded-tr-md rounded-tl-md"></p>
        <div class="sm:px-2 pb-3">
          <p class="font-semibold my-3"><%= link_to album.title, album, class:" hover:opacity-75 hover:underline" %></p>
          <p class="my-3"><%= link_to album.user.name, user_path(album.user), class: "hover:opacity-75 hover:underline" %></p>
            <p><i class="fa-solid fa-suitcase-rolling"></i><span class="ml-2"><%= album.visited_on.strftime("%Y年%m月") %></span></p>
        </div>
      </div>
    <% end %>
  </div>

</div>