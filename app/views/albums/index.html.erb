<% if current_user.try(:admin?) %>
  <h1>Albums</h1>
<% else %>
  <h1>Albums</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>user</th>
      <th>Title</th>
      <th>Visited on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.user.name, user_path(album.user) %></td>
        <td><%= link_to album.title, album %></td>
        <td><%= album.visited_on.strftime("%Y年%m月") %></td>
      </tr>
    <% end %>
  </tbody>
</table>