<div class="container mx-auto text-center text-base lg:text-sm w-2/3 lg:w-1/4 bg-white mt-14 py-8 rounded-md shadow-md">
  <h2 class="text-lg sm:text-2xl"><%= t('.sign_in') %></h2>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-7">
      <%= f.label :email, class:"text-left" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-b border-gray-300 mt-1 w-5/6 focus:outline-none" %>
    </div>

    <div class="field mt-5">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "border-b border-gray-300 mt-1 w-5/6 focus:outline-none" %>
    </div>
    
    <div class="actions mt-10">
      <%= f.submit t('.sign_in'), class: "py-2 w-1/3 rounded-md bg-yellow-300 hover:bg-yellow-400" %>
    </div>
    <% end %>
  </div>
</div>