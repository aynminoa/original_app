<div class="container mx-auto text-center text-sm w-4/5 lg:w-1/3 bg-white my-14 py-5 sm:py-8 rounded-md shadow-md">
<h2 class="text-lg sm:text-2xl text-center"><%= t('.title', resource: resource.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-3">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "border border-gray-300 rounded w-2/3 focus:outline-none focus:ring-1 focus:ring-violet-100" %>
  </div>

  <div class="field mt-3">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded mt-1 w-2/3 focus:outline-none focus:ring-1 focus:ring-violet-100" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field mt-3">
    <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "border border-gray-300 rounded mt-1 w-2/3 focus:outline-none focus:ring-1 focus:ring-violet-100" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-300 rounded mt-1 w-2/3 focus:outline-none focus:ring-1 focus:ring-violet-100" %>
  </div>

  <div class="field mt-3">
    <%= f.label :current_password %><br class="sm:hidden"> <span class="text-xs sm:text-sm"><i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i></span>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "border border-gray-300 rounded mt-1 w-2/3 focus:outline-none focus:ring-1 focus:ring-violet-100" %>
  </div>

  <div class="field mt-3">
    <%= f.label :プロフィール %><br>
    <%= f.text_area :self_introduction, class: "border border-gray-300 rounded mt-1 w-2/3 focus:outline-none focus:ring-1 focus:ring-violet-100 h-50", rows:"4" %>
  </div>

  <div class="field mt-3">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="actions mt-4">
    <%= f.submit t('.update'), class: "px-4 py-2 rounded-md bg-yellow-300 hover:bg-yellow-400" %>
  </div>
<% end %>

<div class="flex mt-10 justify-center">

  <p class="mt-1 mr-16">
    <%= link_to t('devise.shared.links.back'), :back, class: "border-b-2 border-red-600 px-2" %>
  </p>
  
  <p class=""><%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') },class: "px-3 py-1 rounded-md bg-bg-gray-200 hover:bg-gray-100", method: :delete %></p>
</div>
  
  

</div>
